@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Settings
@using Volo.Abp.Settings
@model AGV.Laundry.Pages.Account.CustomLoginModel
@inject IHtmlLocalizer<AccountResource> L
@inject Volo.Abp.Settings.ISettingProvider SettingProvider

    <div class="app-body">
        <main class="main d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <div class="card-group">
                            <div class="card p-4">
                                <div class="card-body">
                                    @if (Model.EnableLocalLogin)
                                    {
                                        <form method="post">
                                            <input asp-for="ReturnUrl" hidden />
                                            <input asp-for="ReturnUrlHash" hidden />
                                            <h1>Login</h1>
                                            <p class="text-muted">Sign In to your account</p>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="icon-user"></i></span>
                                                </div>
                                                <input asp-for="LoginInput.UserNameOrEmailAddress" name="UserNameOrEmailAddress" id="email" type="text" class="form-control" placeholder="Username" required>
                                                <span asp-validation-for="LoginInput.UserNameOrEmailAddress" class="text-danger"></span>
                                            </div>
                                            <div class="input-group mb-4">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="icon-lock"></i></span>
                                                </div>
                                                <input asp-for="LoginInput.Password" name="Password" type="password" class="form-control" placeholder="Password" required>
                                                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                                            </div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <input type="submit" button-type="Primary" name="Action" value="Login" class="btn btn-primary px-4" cl @L["Login"] />
                                                </div>
                                                <div class="col-6 text-right">
                                                    <button type="button" class="btn btn-link px-0">Forgot password?</button>
                                                </div>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                                <div class="card-body text-center">
                                    <div>
                                        <img src="~/assets/images/logo.png" alt="" width="100%" />
                                        @*<h2>Welcome</h2>
                                        <p>Drop Extended Analytics</p>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

<style>
    .app-body{
        margin-top: 14%;
    }
</style>